<header class="fixed-top bg-danger bg-opacity-75">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <% if request.fullpath.include? "/admin" %>
            <li class='mx-1'>
              <%= link_to admin_users_path,class: 'btn btn-outline-light' do %>会員一覧<% end %>
            </li>
            <li class='mx-1'>
              <%=  link_to admin_genres_path,class: 'btn btn-outline-light' do %>ジャンル<% end %>
            </li>
            <li class='mx-1'>
              <%= link_to destroy_admin_session_path, method: :delete,class: 'btn btn-outline-light' do %>管理者ログアウト<% end %>
            </li>
          <% else %>
            <li class="my-auto pr-5 mr-5 text-light">
              現在、管理者アカウントでログインしています。
            </li>
            <li class='mx-1'>
              <%=  link_to posts_path,class: 'btn btn-outline-light' do %>全投稿一覧<% end %>
            </li>
            <li class='mx-1'>
              <%= link_to destroy_admin_session_path, method: :delete,class: 'btn btn-outline-light' do %>管理者ログアウト<% end %>
            </li>
          <% end %>

        <% elsif user_signed_in? %>
          <li class="my-auto pr-5 mr-5 text-light">
            ようこそ、<%=  current_user.nickname %>さん！
          </li>
          <li class='mx-1'>
            <%=  link_to posts_path,class: 'btn btn-outline-light' do %>全投稿一覧<% end %>
          </li>
          <li class='mx-1'>
            <%= link_to user_path(current_user.id),class: 'btn btn-outline-light' do %>マイページ<% end %>
          </li>
          <li class='mx-1'>
            <%=  link_to new_post_path,class: 'btn btn-outline-light' do %>新規投稿<% end %>
          </li>
          <li class='mx-1'>
            <%= link_to destroy_user_session_path, method: :delete,class: 'btn btn-outline-light' do %>ログアウト<% end %>
          </li>

        <% else %>

          <li class='mx-1'>
            <%= link_to new_user_registration_path,class: 'btn btn-outline-light' do %>新規登録<% end %>
          </li>
          <li class='mx-1'>
            <%= link_to new_user_session_path ,class: 'btn btn-outline-light' do %>ログイン<% end %>
          </li>
        <% end %>

        </ul>
    </div>
  </nav>
</header>
