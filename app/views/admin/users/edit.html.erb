<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="my-3">
        <h5><%= @user.full_name %>さんの会員情報編集</h5>
      </div>
      <%= render "layouts/error_messages", resource: @user %>
    </div>
  </div>
  <div class="row mx-5">
    <div class="col-12">
      <%= form_with url: admin_user_path(@user), model: @user, local: true do |user| %>
        <div class="form-group">
            <%= user.label :id, "会員ID", class: "col-sm-2 control-label" %>
            <%= @user.id %>
        </div>
        <div class="image_field">
          <%= user.label "プロフィール画像", class: "col-sm-2 control-label"%>
          <%= user.file_field :profile_image,  accept:"image/*", class: "mb-3" %>
        </div>
        <div class="form-group">
          <%= user.label "氏名", class: "col-sm-2 control-label"%>
          <%= user.text_field :last_name, class: "mr-5" %>
          <%= user.text_field :first_name %>
        </div>
        <div class="form-group">
          <%= user.label "フリガナ", class: "col-sm-2 control-label"%>
          <%= user.text_field :last_name_kana, class: "mr-5" %>
          <%= user.text_field :first_name_kana %>
        </div>
        <div class="form-group">
          <%= user.label "ニックネーム", class: "col-sm-2 control-label" %>
          <%= user.text_field :nickname, class: "mr-5" %>
        </div>
        <div class="form-group">
          <%= user.label "introduction", class: "col-sm-2 control-label" %>
          <%= user.text_area :introduction, class: "mr-5", :size=>"60x5" %>
        </div>
        <div class="form-group">
          <%= user.label "メールアドレス", class: "col-sm-2 control-label " %>
          <%= user.text_field :email, class: "mr-5" %>
        </div>
        <div class="actions">
          <%= user.label :"　", class: "col-sm-2 control-label" %>
          <%= user.submit "変更を保存", class: "btn btn-success" %>
          <%= link_to "退会させる",  admin_user_path(@user), method: :delete, class: "btn btn-danger", data: {confirm: "本当にこのユーザを退会させますか？"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>