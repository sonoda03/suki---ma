<div class="container">
  <div class="row">
    <div class="col-10">
      <div class="mt-3 ml-5">
        <h4>全会員一覧</h4>
　　　</div>
　　　<div class="col-10 offset-2">
        <table class="table table-hover table-inverse" >
          <thead class="thead-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>投稿数</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to  admin_user_path(user.id) do %>
                  <span class="text-dark border-bottom border-dark">
                    <%=  user.full_name %>
                  </span>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td><%= user.posts.count %>投稿</td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>