<div class='container'>
  <div class='row mt-5'>
    <div class='pt-3 pl-5 ml-5'>
      <h5 class='alart alert-secondary'>会員情報編集</h5>
      <%= render 'layouts/error_messages', resource: @user %>
    </div>
  </div>
  <div class='row py-3 col-md-12 align-content-start'>
    <%= form_with url: user_path(@user), model: @user, local: true do |user| %>
      <div class="image_field">
        <%= user.label "プロフィール画像", class: "col-sm-3 control-label"%>
        <%= user.file_field :profile_image,  accept:'image/*', class: "mb-3" %>
      </div>
      <div class="form-group">
        <%= user.label "氏名", class: "col-sm-3 control-label"%>
        <%= user.text_field :last_name, class: "mr-5" %>
        <%= user.text_field :first_name %>
      </div>
      <div class="form-group">
        <%= user.label "フリガナ", class: "col-sm-3 control-label"%>
        <%= user.text_field :last_name_kana, class: "mr-5" %>
        <%= user.text_field :first_name_kana %>
      </div>
      <div class="form-group">
        <%= user.label "ニックネーム", class: "col-sm-3 control-label" %>
        <%= user.text_field :nickname, class: "mr-5" %>
      </div>
      <div class="form-group">
        <%= user.label "自己紹介文", class: "col-sm-3 control-label" %>
        <%= user.text_area :introduction, class: "ml-5", :size=>"70x4" %>
      </div>
      <div class="form-group">
        <%= user.label "メールアドレス", class: "col-sm-3 control-label " %>
        <%= user.text_field :email, class: "mr-5" %>
      </div>
      <div class="actions">
        <%= user.label :"　", class: "col-sm-3 control-label" %>
        <%= user.submit "変更を保存", class: 'btn btn-success mr-5' %>
      </div>
    <% end %>
  </div>
</div>
