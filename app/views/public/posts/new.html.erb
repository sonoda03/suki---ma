<div class='container mt-5'>
  <div class='row pt-3'>
  	<div class='col-md-3'>
  	  <div>
        <h2 style="text-align:center;">User info</h2>
        <%= render 'public/users/info', user: current_user %>
      </div>
      <div class='mt-5'>
        <h2 style="text-align:center;">投稿検索</h2>
        <%= render 'form', q: @q %>
      </div>
	  </div>
    <div class='col-md-8 offset-md-1 mt-3'>
    <h4 class= "ml-2">新規投稿</h4>
    <%= render 'layouts/error_messages', resource: @post %>
      <%= form_with url: posts_path, model: @post, local: true do |form| %>
        <table class="ml-4 mt-5">
          <tr>
            <td>
              <%= form.label "紹介画像"%>
            </td>
            <td>
               <%= form.file_field :get_post_image, accept: "image/*" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= form.label "タイトル"%>
            </td>
            <td>
               <%= form.text_field :title,placeholder: 'タイトル', class: "form-control" %>
            </td>
          </tr>
          <tr>
            <td valign="top">
              <%= form.label "投稿紹介"%>
            </td>
            <td>
              <%= form.text_area :introduction,placeholder: 'ここに投稿紹介文の記述をしてください。', class: "form-control", :size=>"42x8" %>
            </td>
          </tr>
          <tr>
            <td valign="top">
              <%= form.label :url, "URL(任意)"%>
            </td>
            <td>
              <%= form.text_area :url,placeholder: 'URLを貼ってください。', class: "form-control", :size=>"42x2" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= form.label "ジャンル", class: "mr-3"%>
            </td>
            <td>
              <%= form.collection_select :genre_id, Genre.all, :id, :name,
                                     :prompt => "--選択してください--"%>
            </td>
          </tr>
          <tr>
            <td>
              <%= form.label "タグ " %>
            </td>
            <td>
              <%= form.text_field :name,value: @tag_list, class: "form-control", placeholder: '  , で区切るとタグを複数登録可能' %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td align="center">
              <%= form.submit '新規登録', class: "btn-success btn-lg" %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
