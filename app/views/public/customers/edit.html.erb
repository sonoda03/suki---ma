<div class='container'>
  <div class='row'>
    <div class='col-6'>
      <div class="d-flex bd-highlight mb-3 mt-3">
        <h5 class="p-2 bd-highlight">
          <span class="px-3 bg-ligh alert-secondary"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</span>
        </h5>
      </div>
    </div>
  </div>
  <div class="container mx-5">
    <div class="col-12">
      <%= form_with url: customers_infomation_path(@customer), model: @customer, local: true do |customer| %>
        <div class="image_field">
          <%= customer.label "プロフィール画像", class: "col-sm-2 control-label"%>
          <%= customer.file_field :profile_image,  accept:'image/*', class: "mb-3" %>
        </div>
        <div class="form-group">
          <%= customer.label "氏名", class: "col-sm-2 control-label"%>
          <%= customer.text_field :last_name, class: "mr-5" %>
          <%= customer.text_field :first_name %>
        </div>
        <div class="form-group">
          <%= customer.label "フリガナ", class: "col-sm-2 control-label"%>
          <%= customer.text_field :last_name_kana, class: "mr-5" %>
          <%= customer.text_field :first_name_kana %>
        </div>
        <div class="form-group">
          <%= customer.label "ニックネーム", class: "col-sm-2 control-label" %>
          <%= customer.text_field :nickname, class: "mr-5" %>
        </div>
        <div class="form-group">
          <%= customer.label "introduction", class: "col-sm-2 control-label" %>
          <%= customer.text_area :introduction, class: "mr-5", :size=>"60x5" %>
        </div>
        <div class="form-group">
          <%= customer.label "メールアドレス", class: "col-sm-2 control-label " %>
          <%= customer.text_field :email, class: "mr-5" %>
        </div>
        <div class="actions">
          <%= customer.label :"　", class: "col-sm-2 control-label" %>
          <%= customer.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>